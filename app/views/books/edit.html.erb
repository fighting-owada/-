
<h1>Editing Book</h1>

   <% if @book.errors.any? %>
   <div id="error_explanation">
   <h2> <%= @book.errors.count %>errors prohibited this book from being saved:</h2>
   <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
   </ul>
   <% end %>
</div>

<div class="edit_book">
  <%= form_with model: @book, url: book_path(@book),method: :patch do |f| %>

  <div class="field">
    <label for="book_title">Title</label> 
    <%= f.text_field :title %>
  </div>
 
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

   <div class="action">
     <%= f.submit 'Update Book' %>
   </div>

  </div>
<a class="show" <%= link_to"Show", "/books/#{@book.id}" %></a>
|
<a class="back" <%=link_to"Back", "/books" %></a>

</div>
<% end %>


